datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TodoItem {
  createdAt      DateTime        @default(now())
  description    String?
  dueDate        DateTime?
  id             String          @id @default(cuid())
  isCompleted    Boolean?
  pomodoroTimers PomodoroTimer[]
  title          String?
  updatedAt      DateTime        @updatedAt
  user           User?           @relation(fields: [userId], references: [id])
  userId         String?
}

model PomodoroTimer {
  createdAt  DateTime  @default(now())
  endTime    DateTime?
  id         String    @id @default(cuid())
  startTime  DateTime?
  todoItem   TodoItem? @relation(fields: [todoItemId], references: [id])
  todoItemId String?
  updatedAt  DateTime  @updatedAt
}

model User {
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  todoItems TodoItem[]
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
